<%-include("includes/navbar.ejs") %>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="style.css" />
    <style>
      body {
        padding-top: 70px;
      }
      .signupForm {
        width: 400px !important;
        max-width: 400px !important;
      }
    </style>
  </head>
  <body>
    <div class="container mt-5 p-4 border rounded-4 signupForm">
      <h6 class="text-danger">Incorrect Email or Password</h6>
      <form method="post" action="/chats/verify">
        <input
          type="email"
          class="form-control"
          id="exampleInputEmail1"
          aria-describedby="emailHelp"
          name="email"
          value="<%=email %>"
        />
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label fw-bold"
            >Enter Password</label
          >
          <input
            type="password"
            class="form-control"
            id="exampleInputEmail1"
            aria-describedby="emailHelp"
            name="userPassword"
          />
        </div>
        <div class="d-grid gap-2">
          <button class="btn btn-warning rounded-4" type="submit">
            Log in
          </button>
        </div>
        <div id="emailHelp" class="form-text">
          <b>By continuing, you agree to ChitChat's </b>
          <u class="text-primary">Conditions of Use</u> and<u
            class="text-primary"
          >
            Privacy Notice.</u
          >
        </div>
        <hr />
        <div>
          <span class="fw-bold"> Buying for work? </span>
        </div>
        <span class="text-primary">
          <a
            class="link-offset-2 link-offset-1-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover"
            href="#"
          >
            Create a free business account
          </a>
        </span>
      </form>
    </div>
    <hr />
    <%-include("includes/footer.ejs") %>
  </body>
</html>
